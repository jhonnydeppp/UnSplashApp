<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/photosFragment">

    <fragment
        android:id="@+id/photosFragment"
        android:name="com.deneb.unsplashapp.features.photos.PhotosFragment"
        android:label="fragment_photos"
        tools:layout="@layout/fragment_photos" >
        <action
            android:id="@+id/action_photosFragment_to_detailPhotoFragment"
            app:destination="@id/detailPhotoFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailPhotoFragment"
        android:name="com.deneb.unsplashapp.features.photos.DetailPhotoFragment"
        android:label="fragment_detail_photo"
        tools:layout="@layout/fragment_detail_photo">
        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true"/>
    </fragment>
</navigation>